<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		<link
		rel="stylesheet" href="https://bootswatch.com/5/pulse/bootstrap.min.css">
		{# Run `composer require symfony/webpack-encore-bundle`and uncomment the following Encore helpers to start using Symfony UX #}
		{% block stylesheets %}
			{#{{ encore_entry_link_tags('app') }}#}
		{% endblock %}

		{% block javascripts %}
			{#{{ encore_entry_script_tags('app') }}#}
		{% endblock %}
	</head>
	<body>
		<div class="d-flex flex-row justify-content-end">
			<a href="{{ path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')|merge({ '_locale': 'en' })) }}">| En |
			</a>
			<a href="{{ path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')|merge({ '_locale': 'fr' })) }}">
				| Fr |
			</a>
		</div>
		{% if is_granted('IS_AUTHENTICATED_FULLY') %}
			<div class="d-flex justify-content-end">
				<button class="btn btn-danger mt-2 mb-2">
					<a href="{{ path('app_logout') }}">
						Logout</a>
				</button>
			</div>
			<p class="d-flex justify-content-end mb-5">Vous êtes connecté en tant que :
				{{ app.user.email }}</p>

		{% endif %}
		{% block body %}{% endblock %}

	</body>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</html>
